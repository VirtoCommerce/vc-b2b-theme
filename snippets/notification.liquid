<div class="alert fixed" role="alert" ng-class="{ 'alert-danger': storefrontNotification.type == 'error','alert-success': storefrontNotification.type == 'success' }" ng-if="storefrontNotification" ng-cloak>
    <button aria-label="Close" class="close" type="button" ng-click="closeNotification()">
        <span aria-hidden="true">Ã—</span>
    </button>
    <div ng-if="storefrontNotification.type == 'error'">
        <strong>Oops! An error was occured!</strong>
    Please send the technical details to us.<br /><br />
        <a style="color: #a94442; cursor: pointer; font-weight: 700;" ng-click="toggleNotificationDetails()">
            <i class="fa" ng-class="{ 'fa-angle-down': !storefrontNotification.detailsVisible, 'fa-angle-up': storefrontNotification.detailsVisible }"></i>
            <span ng-if="!storefrontNotification.detailsVisible">Show me technical details</span>
            <span ng-if="storefrontNotification.detailsVisible">Hide the details</span>
        </a>
    </div>
    <p ng-if="storefrontNotification.detailsVisible" ng-bind="storefrontNotification.title"></p>
    <p ng-if="storefrontNotification.detailsVisible" ng-bind="storefrontNotification.message"></p>
</div>
