<script id="storefront.recently-added-cart-item-dialog.tpl" type="text/ng-template">
    <div class="modal-header">
        <button type="button" class="close" ng-click="close()" title="{{ 'cart.general.close_cart' | t }}" aria-label="{{ 'cart.general.close_cart' | t }}"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{% raw %}{{ dialogData.items.length }}{% endraw %}&nbsp;{{ 'cart.general.added_to_cart' | t }}</h4>
    </div>
    <div class="modal-body">
        <vc-errors level="'warning'" message="dialogData.errorMessage" errors="dialogData.errors"></vc-errors>
        <div ng-repeat="item in dialogData.items">
            <div class="row">
                <div class="col-md-2">
                    <img class="img-responsive" ng-if="item.imageUrl" ng-src="{% raw %}{{ item.imageUrl }}{% endraw %}">
                    <img class="img-responsive" ng-if="!item.imageUrl" src="{{ 'no-image.svg' | asset_url }}" />
                </div>
                <div class="col-md-5">
                    <a href="item.url" ng-bind="item.name"></a>
                </div>
                <div class="col-md-5">
                    <div class="row">
                        <div class="col-md-4"><p class="text-muted small">{{ 'cart.general.price' | t }}</p></div>
                        <div class="col-md-4"><p class="text-muted small">{{ 'cart.general.quantity' | t }}</p></div>
                        <div class="col-md-4"><p class="text-muted small">{{ 'cart.general.total' | t }}</p></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            {% if settings.show_prices_with_taxes %}
                            <span class="small" ng-bind="item.price.actualPriceWithTax.formattedAmount"></span>
                            {% else %}
                            <span class="small" ng-bind="item.price.actualPrice.formattedAmount"></span>
                            {% endif %}
                        </div>
                        <div class="col-md-4"><span class="small" ng-bind="item.quantity"></span></div>
                        <div class="col-md-4">
                            {% if settings.show_prices_with_taxes %}
                            <span class="small" ng-bind="item.price.extendedPriceWithTax.formattedAmount"></span>
                            {% else %}
                            <span class="small" ng-bind="item.price.extendedPrice.formattedAmount"></span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        </div>
    </div>
        <div class="modal-footer">
            <p class="pull-left" ng-controller="cartBarController">{{ 'cart.general.products_in_cart' | t: cartItemsCount: cartItemsCount }}</p>
            <button type="button" class="btn btn-default" ng-click="close()">{{ 'cart.general.continue_shopping' | t }}</button>
            <button type="button" class="btn btn-primary" ng-click="redirect('{{ 'cart' | absolute_url }}')">{{ 'cart.general.view_cart' | t }}</button>
        </div>
</script>
